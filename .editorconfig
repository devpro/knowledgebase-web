root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8-bom
end_of_line = lf
insert_final_newline = true

[yml]
trim_trailing_whitespace = true

[md]
trim_trailing_whitespace = false

# Ignore paths
[/themes/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
